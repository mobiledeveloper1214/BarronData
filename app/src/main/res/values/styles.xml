<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="FullScreenTheme" parent="AppThemeDark">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FlatButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="RaisedButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorOrange</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorOrange</item>
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewNormalStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewBoldStyle" parent="TextViewNormalStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <!--************************************ Toolbar ************************************-->
    <style name="ToolbarStyle">
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/black</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/colorOrange</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/colorOrange</item>
    </style>

</resources>
