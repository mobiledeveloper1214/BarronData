<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@color/colorPrimary"
        android:scrollbarSize="@dimen/size_04">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_order_details"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/work_order_title"
                        style="@style/TextViewBoldStyle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/colon"
                        style="@style/TextViewBoldStyle"/>

                    <TextView
                        android:id="@+id/tv_work_order_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewNormalStyle"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/work_order_number"
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/colon"
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_work_order_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Due Date: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_due_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Due Date"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Priority: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_priority"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Priority"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Workflow Notes: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_workflow_notes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Workflow Notes"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notes By: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_notes_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notes By"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_08"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asset Information"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tag Number: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_tag_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tag Number"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asset Name: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_asset_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Asset Name"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Criticality: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_criticality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Criticality"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Performance Standard: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_performance_standard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Performance Standard"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: "
                        style="@style/TextViewBoldStyle"/>

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        style="@style/TextViewNormalStyle"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_08"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Instruction"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Instruction"
                    style="@style/TextViewNormalStyle"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_08"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Report"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date Done: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_date_done"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date Done"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Duration: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_total_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Duration"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Work Details: "
                        style="@style/TextViewBoldStyle"/>

                    <TextView
                        android:id="@+id/tv_work_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Work Details"
                        style="@style/TextViewNormalStyle"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_08"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resources Used"
                        android:textSize="@dimen/font_size_normal"
                        android:textColor="@color/colorOrange"
                        android:textStyle="bold"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"
                        android:textSize="@dimen/font_size_normal"
                        android:textColor="@color/colorOrange"
                        android:textStyle="bold"/>

                    <Space
                        android:layout_width="@dimen/size_16"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove"
                        android:textSize="@dimen/font_size_normal"
                        android:textColor="@color/colorOrange"
                        android:textStyle="bold"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discipline 1 "
                        style="@style/TextViewBoldStyle"/>

                    <TextView
                        android:id="@+id/tv_discipline_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2 hrs"
                        style="@style/TextViewNormalStyle"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discipline 2 "
                        style="@style/TextViewBoldStyle"/>

                    <TextView
                        android:id="@+id/tv_discipline_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.5 hrs"
                        style="@style/TextViewNormalStyle"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_08"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Counter"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Counter Name: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_counter_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Counter Name"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Counter Type: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_counter_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Counter Type"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Read Date: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_last_read_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Read Date"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Read Value: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_last_read_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Read Value"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Read/Done Date: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_last_read_done_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Read/Done Date"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Read Value: "
                            style="@style/TextViewBoldStyle"/>

                        <TextView
                            android:id="@+id/tv_new_read_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Read Value"
                            style="@style/TextViewNormalStyle"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_08"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Measure Points"
                    android:textSize="@dimen/font_size_normal"
                    android:textColor="@color/colorOrange"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Measure Point 1"
                        style="@style/TextViewBoldStyle"/>

                    <Space
                        android:layout_width="@dimen/size_16"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Value: "
                        style="@style/TextViewBoldStyle"/>

                    <TextView
                        android:id="@+id/tv_measure_point_1_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22"
                        style="@style/TextViewNormalStyle"/>

                    <Space
                        android:layout_width="@dimen/size_16"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UOM: "
                        style="@style/TextViewBoldStyle"/>

                    <TextView
                        android:id="@+id/tv_measure_point_1_uom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MM"
                        style="@style/TextViewNormalStyle"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Measure Point 2"
                        style="@style/TextViewBoldStyle"/>

                    <Space
                        android:layout_width="@dimen/size_16"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Value: "
                        style="@style/TextViewBoldStyle"/>

                    <TextView
                        android:id="@+id/tv_measure_point_2_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        style="@style/TextViewNormalStyle"/>

                    <Space
                        android:layout_width="@dimen/size_16"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UOM: "
                        style="@style/TextViewBoldStyle"/>

                    <TextView
                        android:id="@+id/tv_measure_point_2_uom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MM"
                        style="@style/TextViewNormalStyle"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_08"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photos / Documents"
                        android:textSize="@dimen/font_size_normal"
                        android:textColor="@color/colorOrange"
                        android:textStyle="bold"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Photo"
                        android:textSize="@dimen/font_size_normal"
                        android:textColor="@color/colorOrange"
                        android:textStyle="bold"/>

                    <Space
                        android:layout_width="@dimen/size_16"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Document"
                        android:textSize="@dimen/font_size_normal"
                        android:textColor="@color/colorOrange"
                        android:textStyle="bold"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photos"
                    style="@style/TextViewBoldStyle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Documents"
                    style="@style/TextViewBoldStyle"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
